<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ffffff">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/slBackButton"
        android:src="@drawable/backarrow"
        android:contentDescription="description" 
        />
    <TextView
        android:text="Current:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slCurrentListText"
        android:textColor="#ff26415a"
        android:layout_marginLeft="37.0dp"
        android:layout_marginTop="62.0dp" 
        />
    <TextView
        android:text="Select A List"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slCurrentListInfo"
        android:layout_marginLeft="117.0dp"
        android:layout_marginTop="62.0dp" 
        />
    <Button
        android:text="Add"
        android:layout_height="55dp"
        android:layout_width="90dp"
        android:id="@+id/slAddButton"
        android:background="@drawable/searchviewrounded"
        android:textColor="#ff000000"
        android:backgroundTint="#7fd178"
        android:layout_marginTop="115.0dp"
        android:layout_marginLeft="40.0dp" 
        />
    <Button
        android:text="Delete"
        android:layout_height="55dp"
        android:layout_width="90dp"
        android:id="@+id/slDeleteButton"
        android:background="@drawable/searchviewrounded"
        android:backgroundTint="#f6a796"
        android:textColor="#ff000000"
        android:layout_marginLeft="162.0dp"
        android:layout_marginTop="115.0dp" 
        />

     <Button
        android:text="Set"
        android:layout_height="55dp"
        android:layout_width="90dp"
        android:id="@+id/slSetButton"
        android:background="@drawable/searchviewrounded"
        android:backgroundTint="#9bb8f0"
        android:textColor="#ff000000"
        android:layout_marginLeft="284.0dp"
        android:layout_marginTop="115.0dp" 
        />
    <TextView
        android:text="List Name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slListNameText"
        android:layout_marginTop="208.5dp"
        android:layout_marginLeft="30.5dp" 
        />
    <TextView
        android:text="Start Date"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/slStartDateText"
        android:layout_marginTop="208.5dp" 
        />
    <TextView
        android:text="End Date"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slEndDateText"
        android:layout_marginTop="208.5dp"
        android:layout_marginLeft="295.0dp" 
        />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/slLists"
        android:background="#f8fcfc"
        android:layout_marginTop="226.5dp" 
        />

</RelativeLayout>