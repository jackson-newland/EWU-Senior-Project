<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ffffff">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/addGroceryBackButton"
        android:src="@drawable/backarrow"
        android:contentDescription="description" 
        />
    <SearchView
        android:id="@+id/searchViewAddGrocery"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="81.5dp"
        android:layout_marginRight="123.0dp"
        android:layout_marginLeft="17.0dp"
        android:layout_marginBottom="0.0dp"
        android:queryHint="Search"
        android:background="#f8fcfc" 

        />
    <Button
        android:id="@+id/addButtonAddGrocery"
        android:text="Add"
        android:textSize="7pt"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:backgroundTint="#7fd178"
        android:textColor="@android:color/black"
        android:minWidth="25px"
        android:minHeight="25px"
        android:background="@drawable/searchviewrounded"
        android:layout_marginTop="79.5dp"
        android:layout_marginLeft="277.5dp"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="1.0dp" 
        />
    <TextView
        android:id="@+id/searchViewLabelAddGrocery"
        android:text="Search Store Items to Add"
        android:textColor="#001331"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginTop="59.0dp"
        android:layout_marginLeft="21.5dp" 
        />
     <ListView
        android:id="@+id/listViewAddGrocery"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:background="#f8fcfc"
        android:layout_marginTop="228.5dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginRight="0.0dp" 
        />
    
     
</RelativeLayout>