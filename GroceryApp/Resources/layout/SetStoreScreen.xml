<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ffffff">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/ssBackButton"
        android:src="@drawable/backarrow"
        android:contentDescription="description" 
        />
    <TextView
        android:text="Your current store:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ssCurrentStoreText"
        android:textColor="@android:color/black"
        android:layout_marginTop="70.5dp"
        android:layout_marginLeft="25.0dp" 
        />
    <TextView
        android:text="Select a store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ssCurrentStoreInfoText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="103.5dp"
        android:layout_marginLeft="24.0dp" 
        />

    <Button
        android:text="Set"
        android:layout_height="55dp"
        android:layout_width="90dp"
        android:id="@+id/ssSetButton"
        android:background="@drawable/searchviewrounded"
        android:backgroundTint="#9bb8f0"
        android:textColor="#ff000000"
        android:layout_marginLeft="17.0dp"
        android:layout_marginTop="150.0dp" 
        />

    <Button
        android:text="Delete"
        android:layout_height="55dp"
        android:layout_width="90dp"
        android:id="@+id/ssDeleteButton"
        android:background="@drawable/searchviewrounded"
        android:backgroundTint="#f6a796"
        android:textColor="#ff000000"
        android:layout_marginLeft="137.0dp"
        android:layout_marginTop="150.0dp" 
        />

     <Button
        android:id="@+id/ssDeleteAllButton"
        android:text="Delete All"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:backgroundTint="#f77777"
        android:textColor="#ffffff"
        android:background="@drawable/searchviewrounded"
        android:layout_marginLeft="257dp"
        android:layout_marginTop="150.0dp" 
        />
    <TextView
        android:id="@+id/ssStoreSelectText"
        android:text="Select Store to Shop From"
        android:textColor="#001331"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginTop="225.5dp"
        android:layout_marginLeft="17.5dp" 
        />
    <ListView
        android:id="@+id/ssStoreInfoList"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#f8fcfc"
        android:layout_marginTop="255.5dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginRight="0.0dp" 
        />
    
     
</RelativeLayout>