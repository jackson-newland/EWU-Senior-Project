<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ffffff">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/dcBackButton"
        android:src="@drawable/backarrow"
        android:contentDescription="description" 
        />
    <TextView
        android:text="Select the Coupons to Delete"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dcInfoText"
        android:textColor="#ff26415a"
        android:layout_marginTop="55.0dp"
        android:layout_marginLeft="37.5dp" 
        />
    <Button
        android:text="Delete"
        android:layout_height="55dp"
        android:layout_width="90dp"
        android:id="@+id/dcDeleteButton"
        android:textColor="#ff000000"
        android:backgroundTint="#f6a796"
        android:layout_marginTop="92.5dp"
        android:layout_marginLeft="37.5dp" 
        />
    <Button
        android:text="Delete All"
        android:layout_height="55dp"
        android:layout_width="130dp"
        android:id="@+id/dcDeleteAllButton"
        android:textColor="#ffff"
        android:backgroundTint="#f77777"
        android:layout_marginLeft="191.5dp"
        android:layout_marginTop="92.5dp" 
        />
    <TextView
        android:text="No. Selected:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dcItemsSelectedText"
        android:layout_marginTop="148.0dp"
        android:layout_marginLeft="37.5dp" 
        />
    <TextView
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dcItemsSelectedNumber"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="148.5dp" 
        />
    <ListView
        android:id="@+id/dcCouponList"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="392dp"
        android:layout_height="360dp"
        android:background="#f8fcfc"
        android:layout_marginTop="196.0dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginRight="0.0dp" 
        />
     
</RelativeLayout>