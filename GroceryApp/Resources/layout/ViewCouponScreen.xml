<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/viewCouponBackButton"
        android:src="@drawable/backarrow"
        android:contentDescription="description" />
    <TextView
        android:id="@+id/savedCouponsLabelViewCoupon"
        android:text="Your saved coupons from:"
        android:textSize="8pt"
        android:textColor="#001331"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_marginTop="52.0dp"
        android:layout_marginLeft="32.0dp" 
        />
    <TextView
        android:id="@+id/storeNameViewCoupon"
        android:text="Store Name Variable Placeholder"
        android:textSize="7pt"
        android:textColor="#636262"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="102.5dp"
        android:layout_marginLeft="50.0dp" 
        />
    <TextView
        android:id="@+id/storeAddressViewCoupon"
        android:text="Store Address Variable Placeholder"
        android:textSize="7pt"
        android:textColor="#636262"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginTop="152.5dp"
        android:layout_marginLeft="50.0dp" 
        />
    <ListView
        android:id="@+id/listViewCoupons"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/searchviewrounded"
        android:layout_marginTop="228.5dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginRight="0.0dp" 
        />
    
</RelativeLayout>